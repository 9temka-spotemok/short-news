# Railway Production Environment Variables
# Этот файл содержит минимальные переменные для запуска на Railway

# Application
ENVIRONMENT=production
DEBUG=false
SECRET_KEY=railway-production-secret-key-2024-change-this

# Database (Railway предоставит эти переменные автоматически)
# DATABASE_URL будет установлена Railway автоматически
# REDIS_URL будет установлена Railway автоматически

# Celery (используем те же Redis URL что и для основного приложения)
# CELERY_BROKER_URL будет установлена Railway автоматически
# CELERY_RESULT_BACKEND будет установлена Railway автоматически

# CORS - разрешаем все для начала
ALLOWED_HOSTS=["*"]

# Frontend URLs (замените на ваш домен)
FRONTEND_BASE_URL=https://your-frontend-domain.com
FRONTEND_SETTINGS_URL=https://your-frontend-domain.com/settings
FRONTEND_DIGEST_SETTINGS_URL=https://your-frontend-domain.com/settings/digest

# Scraping
SCRAPER_USER_AGENT=shot-news-bot/1.0 (+https://shot-news.com/bot)
SCRAPER_DELAY=5.0
SCRAPER_TIMEOUT=30

# Rate Limiting
RATE_LIMIT_REQUESTS=100

# Logging
LOG_LEVEL=INFO

# Optional APIs (можно добавить позже)
# OPENAI_API_KEY=your-openai-api-key
# TELEGRAM_BOT_TOKEN=your-telegram-bot-token
# TWITTER_API_KEY=your-twitter-api-key
# GITHUB_TOKEN=your-github-token
