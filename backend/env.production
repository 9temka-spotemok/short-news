# Railway/Render/Heroku deployment configuration
# Скопируйте этот файл в .env и заполните значения для продакшена

# Application
ENVIRONMENT=production
DEBUG=false
RUN_MIGRATIONS=true
SECRET_KEY=your-production-secret-key-change-this

# Database (используйте внешний PostgreSQL)
DATABASE_URL=postgresql+asyncpg://username:password@host:port/database

# Redis (используйте внешний Redis)
REDIS_URL=redis://username:password@host:port

# OpenAI API
OPENAI_API_KEY=your-openai-api-key-here
OPENAI_MODEL=gpt-4o-mini

# Twitter API
TWITTER_API_KEY=your-twitter-api-key
TWITTER_API_SECRET=your-twitter-api-secret
TWITTER_ACCESS_TOKEN=your-twitter-access-token
TWITTER_ACCESS_TOKEN_SECRET=your-twitter-access-token-secret

# GitHub API
GITHUB_TOKEN=your-github-token-here

# Reddit API
REDDIT_CLIENT_ID=your-reddit-client-id
REDDIT_CLIENT_SECRET=your-reddit-client-secret

# Email
SENDGRID_API_KEY=your-sendgrid-api-key
FROM_EMAIL=noreply@shot-news.com

# Telegram
TELEGRAM_BOT_TOKEN=your-telegram-bot-token-here
TELEGRAM_CHANNEL_ID=@your_channel_name

# Frontend URLs (замените на ваш Netlify домен)
FRONTEND_BASE_URL=https://your-app-name.netlify.app
FRONTEND_SETTINGS_URL=https://your-app-name.netlify.app/settings
FRONTEND_DIGEST_SETTINGS_URL=https://your-app-name.netlify.app/settings/digest

# Celery
CELERY_BROKER_URL=redis://username:password@host:port/0
CELERY_RESULT_BACKEND=redis://username:password@host:port/0

# CORS (добавьте ваш Netlify домен)
ALLOWED_HOSTS=["https://your-app-name.netlify.app"]

# Scraping
SCRAPER_USER_AGENT=shot-news-bot/1.0 (+https://shot-news.com/bot)
SCRAPER_DELAY=5.0
SCRAPER_TIMEOUT=30
SCRAPER_MAX_RETRIES=4
SCRAPER_RETRY_BACKOFF=1.7
SCRAPER_RATE_LIMIT_REQUESTS=8
SCRAPER_RATE_LIMIT_PERIOD=60
SCRAPER_CONFIG_PATH=./config/scraper_sources.yml
SCRAPER_HEADLESS_ENABLED=true
SCRAPER_PROXY_URL=
SCRAPER_SNAPSHOTS_ENABLED=true
SCRAPER_SNAPSHOT_DIR=storage/raw_snapshots

# Rate Limiting
RATE_LIMIT_REQUESTS=100

# Logging
LOG_LEVEL=INFO